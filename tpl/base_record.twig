{% extends "widget.twig" %}

{% block widget %}

  {% block pre_record %}{% endblock pre_record %}

  {% block record %}
    <div class="ui-widget ui-widget-content app-widget-content">
    
    {# put in all hidden variables #}
    {% for item_id, entry in item %}
      {% if 'hidden' == entry.type %}
        {% set entry_value = entry.value is defined ? entry.value : "" %}
        <input id="{{ widget.full }}__{{ item_id }}" type="hidden" value="{{ entry_value }}"/>
      {% endif %}
    {% endfor %}
    
    {% block record_items %}{% endblock %}

    </div>
  {% endblock record %}

  {% block post_record %}{% endblock post_record %}

{% endblock widget %}
