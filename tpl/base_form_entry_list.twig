{% extends "base_list.twig" %}

{% block javascript %}
  {{ parent() }}
  <script type="text/javascript">
    // override the add button
    $( "#{{ widget.full }}_add" ).unbind( 'click' );
    $( "#{{ widget.full }}_add" ).click( function() {
      if( ajax_push( "{{ widget.subject }}", "new" ) ) window.location.reload();
    } );
  </script>
{% endblock javascript %}
