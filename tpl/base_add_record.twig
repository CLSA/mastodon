 # Base template for adding items of one record to another.
 # @author Patrick Emond <emondpd@mcmaster.ca>
 #}
{% extends "widget.twig" %}

{% block widget %}

  {% block record %}
  
    {# Add the record using the record's add widget name to determine which template to use #}
    {% set add_template = [ add_widget_name, "twig" ]|join(".") %}
    {% include add_template with record %}
  
  {% endblock record %}

{% endblock widget %}
